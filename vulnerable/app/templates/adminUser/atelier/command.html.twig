{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
    <h1 class="text-2xl font-semibold mb-6 text-start">Choississez une commande à exécuter parmis la liste suivante</h1>
    <ul>
        <li>Total des ateliers : <b>php bin/console app:total</b></li>
    </ul>
    {{ form(form) }}
    {% if error is not null %}
        <div class="mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            {{ error }}
        </div>
    {% endif %}
    {% if output is not null %}
        <div class="mt-4 p-4 bg-gray-100 border border-gray-300 rounded">
            <pre>{{ output }}</pre>
        </div>
    {% endif %}
{% endblock %}